@{ViewData["Title"] = "Grade Calculator";
    Layout = "_Layout";
}
@model GradeCalcModel;
<!-- Contact Section-->
<section class="page-section" id="contact">
    <div class="container">
        <!-- Contact Section Heading-->
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Grade Calculator</h2>
        <!-- Icon Divider-->
        <div class="divider-custom">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Grade Calculation Section Form-->
        <div class="row justify-content-center">
            <form method="post" class="col-lg-8 col-xl-7">
                <label>Assignments: </label>
                <input id="assignment" asp-for="assigment" />
                <br /><br />
                <label>Group Project: </label>
                <input id="project" asp-for="project" /> <br /><br />
                <label>Quizzes: </label>
                <input id="quizzes" asp-for="quizzes" /> <br /><br />
                <label>Exams: </label>
                <input id="exam" asp-for="exam" /> <br /><br />
                <label>INTEX: </label>
                <input id="intex" asp-for="intex" /> <br /><br />
                <input id="calculate" type="submit" value="Calculate Grade" />
                <div asp-validation-summary="All"></div>

            </form>
        </div>
    </div>
</section>